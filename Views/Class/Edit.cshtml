@model Class
@{
    ViewData["Title"] = "Edit";
}


<nav>
    <a class="logo" tabindex="7">
        <img src="~/images/letterM.png">
    </a>
</nav>

<nav class="navbar navbar-expand-sm navbar-dark justify-content-center">

    <ul class="navbar-nav">

        <li class="nav-item list-inline-item">
            <a class="nav-link" href="/Home/Index" tabindex="3"><i class="fas fa-home" title="الصفحةُ الرئيسية"></i></a>
        </li>

        <li class="nav-item list-inline-item">
            <a class="nav-link" onkeypress="goStage()" onclick="goStage()" tabindex="4"><i class="fas fa-chalkboard-teacher" title="الفُصول الدراسيّة"></i></a>
        </li>

        <li class="nav-item list-inline-item">
            <a class="nav-link" href="/Stage/Index" tabindex="5"><i class="fas fa-university" title="السنواتُ الدراسيّة"></i></a>
        </li>

        <li class="nav-item list-inline-item">
            <a class="nav-link" asp-action="ListClass" asp-controller="Class" tabindex="6"><i class="fas fa-edit" title="تعديلُ اسمِ الفصلِ"></i></a>
        </li>

    </ul>
</nav>

<h4>اضافةُ فصلٍ</h4>
<form asp-action="Edit" asp-controller="Class" asp-route-id="@Model.Id" method="post">

    <div class="add-classes">

        <input asp-for="@Model.Name" type="text" id="newClassName" placeholder="اسمُ الفصلِ الجديدِ" tabindex="1">

        <br>

        <select asp-for="@Model.Stage" asp-items="@ViewBag.Stage as SelectList" class="custom-select-sm" placeholder="الصفُّ الدراسيُّ الأول" tabindex="2"></select>

        <br>

        <button type="submit" tabindex="3">تعديل</button>

    </div>
</form>

<!-- This is all CSS files for this page -->
<link rel="stylesheet" href="~/css/sumOfAllFiles.css" />
<link rel="stylesheet" href="~/css/addClass.css" />

<!-- This is all JAVASCRIPT files for this page -->
<script src="~/js/custom-addClass.js "></script>
<script>
    function goStage() {
        window.open('/Class/Index/' + localStorage.getItem('stageId'), '_self');
    }
</script>